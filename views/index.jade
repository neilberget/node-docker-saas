html
  head
    link(rel='stylesheet', href='/css/bootstrap.min.css', type='text/css')

  body
    .container
      h1 SAAS

      a(href='/images/new') Add Dockerfile

      if info.length
        .alert.alert-success 
          pre
            = info

      h2 Dockerfiles
      ul
        each dockerfile in dockerfiles
          li
            = dockerfile.tag
            | &nbsp;
            a(href="/images/" + dockerfile._id + "/build") build
            | &nbsp;
            a(href="/images/" + dockerfile._id + "/start") start
            | &nbsp;
            a(href="/images/" + dockerfile._id + "/delete") delete

